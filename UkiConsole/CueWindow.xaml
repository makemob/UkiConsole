            <DataGrid x:Name="dataGrid" AutoGenerateColumns="True">

            </DataGrid>
        </Grid>
        <Button x:Name="button1" Content="..." HorizontalAlignment="Left" Height="35" Margin="467,10,0,0" VerticalAlignment="Top" Width="39" Click="button1_Click"/>

